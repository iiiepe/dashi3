<div class="modal-header">
    <h3 class="modal-title">Settings</h3>
</div>
<div class="modal-body">
    <form>
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" ng-model="data.title" name="title" />
    </div>
    <div class="form-group">
      <label for="title">Description</label>
      <textarea class="form-control" ng-model="data.description" name="description"></textarea>
    </div>
    <div class="form-group">
      <label for="title">Text to append to number</label>
      <input type="text" class="form-control" ng-model="data.textToAppend" name="textToAppend" />
    </div>
    <div class="form-group">
      <label for="title">Background color</label>
      <input type="text" class="form-control" ng-model="data.backgroundColor" name="backgroundColor" colorpicker="hex" />
    </div>
    <div class="form-group">
      <label for="title">Text color</label>
      <input type="text" class="form-control" ng-model="data.textColor" name="textColor" colorpicker="hex" />
    </div>
  </form>
</div>
<div class="modal-footer">
    <button class="btn btn-primary" ng-click="update()">Update</button>
    <button class="btn btn-danger" ng-click="remove()">Remove</button>
    <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
</div>