<div class="modal-header">
  <h3 class="modal-title">Create new widget</h3>
</div>
<div class="modal-body">
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" ng-model="data.title" name="title" />
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea class="form-control" ng-model="data.description" name="description"></textarea>
    </div>
    <div class="form-group">
      <label for="label">Label</label>
      <input type="text" class="form-control" ng-model="data.label" name="label" />
    </div>
    <div class="form-group">
      <label for="template">Template</label>
      <select class="form-control" ng-model="data.template" name="type" ng-options="template.template as template.name for template in templates">
      </select>
    </div>
    <div class="form-group">
      <label for="size">Size</label>
      <select class="form-control" ng-model="data.size" name="type">
        <option value="small">Small</option>
        <option value="big">Big</option>
      </select>
    </div>
    <div class="form-group">
      <label for="storage">Storage</label>
      <select class="form-control" ng-model="data.storage" name="type" ng-options="source.id as source.name for source in storage">
      </select>
    </div>
  </form>
</div>
<div class="modal-footer">
  <button class="btn btn-primary" ng-click="ok()">Create</button>
  <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
</div>
