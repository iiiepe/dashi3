<div class="item" ng-controller="WidgetMessagesController">
  <div class="panel panel-<%= sails.config.settings.theme %> dash-unit" data-row="{{ data.row }}" data-col="{{ data.column }}" data-sizex="2" data-sizey="2">
    <header class="panel-heading dash-title">
      {{ widget.title }}
      <div class="pull-right">
        <i class="as-link glyphicon glyphicon-plus" ng-click="openForm({})"></i>
        <i class="as-link glyphicon glyphicon-cog" ng-click="openSettings({})"></i>
      </div>
    </header>
    <div class="panel-body dash-content">
      <div ng-repeat="element in data | limitTo : 3">
        <div class="media">
          <div class="media-left" ng-show="element.image">
            <img src="{{ element.image }}" width="32"/>
          </div>
          <div class="media-body">
            <h4 class="media-heading">
              {{ element.title }}
            </h4>
            <div>
              {{ element.content }}
            </div>
            <div ng-show="element.link">
              <a class="btn btn-xs btn-primary" target="_blank" href="{{ element.link }}">
                More
              </a>
            </div>
          </div>
        </div>
        <hr />
      </div>
    </div>
  </div>
</div>