<div class="item" ng-controller="WidgetMessagesController">
  <div class="dash-unit" data-row="{{ data.row }}" data-col="{{ data.column }}" data-sizex="2" data-sizey="2">
    <div class="dash-title">
      {{ widget.title }}
    </div>
    <div class="dash-content">
      <div ng-repeat="element in data">
        <div class="media">
          <div class="media-left" ng-show="element.value.image != null">
            <img src="{{ element.value.image }}" width="64"/>
          </div>
          <div class="media-body">
            <h4 class="media-heading">
              {{ element.value.title }}
            </h4>
            <div>
              {{ element.value.content }}
            </div>
            <div ng-show="element.value.link">
              <a class="btn btn-xs btn-primary" target="_blank" href="{{ element.value.link }}">
                More
              </a>
            </div>
          </div>
        </div>
        <hr />
      </div>
    </div>
    <div class="dash-footer">
      <span class="dash-description">
        {{ widget.description }}
      </span>
      <div class="pull-right">
        <i class="as-link glyphicon glyphicon-plus" ng-click="openForm({})"></i>
        <i class="as-link glyphicon glyphicon-cog" ng-click="openSettings({})"></i>
      </div>
    </div>
  </div>
</div>
