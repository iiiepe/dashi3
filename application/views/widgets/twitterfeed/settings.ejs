<div class="modal-header">
    <h3 class="modal-title">Settings</h3>
</div>
<div class="modal-body">
  <form>
    <div class="form-group">
        <label for="id">Id</label>
        <div class="form-control">{{ data.id }}</div>
    </div>
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" ng-model="data.title" name="title" />
    </div>
    <div class="form-group">
      <label for="title">Description</label>
      <textarea class="form-control" ng-model="data.description" name="description"></textarea>
    </div>
    <div class="form-group">
      <label for="title">Data source</label>
      <input type="text" ng-model="data.dataset" placeholder="Enter a dataset" typeahead="datasets for datasets in getDatasets($viewValue)" typeahead-loading="loadingLocations" class="form-control">
      <i ng-show="loadingLocations" class="glyphicon glyphicon-refresh"></i>
    </div>
    <div class="form-horizontal">
      <h4>Settings</h4>
      <hr />

      <div class="form-group">
        <label class="col-sm-3 control-label" for="twitterusername">Term or hashtag to monitor</label>
        <div class="col-sm-9">
          <input type="text" name="format" class="form-control" ng-model="data.settings.term" />
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-3 control-label" for="twitterusername">Number of tweets to show</label>
        <div class="col-sm-9">
          <input type="text" name="maxTweets" class="form-control" ng-model="data.settings.maxTweets" />
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-3 control-label" for="language">Language</label>
        <div class="col-sm-9">
          <select name="language" class="form-control" ng-model="data.settings.language">
            <option value="en">English</option>
            <option value="es">Spanish</option>
            <option value="fr">French</option>
          </select>
        </div>
      </div>

    </div>
  </form>
</div>
<div class="modal-footer">
    <button class="btn btn-primary" ng-click="update()">Update</button>
    <button class="btn btn-danger" ng-click="remove()">Remove</button>
    <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
</div>
