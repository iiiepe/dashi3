<div class="modal-header">
    <h3 class="modal-title">Settings</h3>
</div>
<div class="modal-body">
  <form>
    <div class="form-group">
        <label for="id">Id</label>
        <div class="form-control">{{ data.id }}</div>
    </div>
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" ng-model="data.title" name="title" />
    </div>
    <div class="form-group">
      <label for="title">Description</label>
      <textarea class="form-control" ng-model="data.description" name="description"></textarea>
    </div>
    <div class="form-horizontal">
      <h4>Settings</h4>
      <hr />

      <div class="form-group">
        <label class="col-sm-3 control-label" for="twitterusername">User to monitor</label>
        <div class="col-sm-9">
          <input type="text" name="format" class="form-control" ng-model="data.settings.user" />
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-3 control-label">Number of tweets to show</label>
        <div class="col-sm-9">
          <input type="text" name="maxTweets" class="form-control" ng-model="data.settings.maxTweets" />
        </div>
      </div>
    </div>
  </form>
</div>
<div class="modal-footer">
    <button class="btn btn-primary" ng-click="update()">Update</button>
    <button class="btn btn-danger" ng-click="remove()">Remove</button>
    <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
</div>
