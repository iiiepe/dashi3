
<div class="signin">
  <div class="container">
    <% if (errors) {%>
      <% errors.forEach(function (error) { %>
        <%= __(error) %>
      <% }) %>
    <% } %>
    
    <form class="form-signin" role="form" action="/auth/local" method="post">
      <h2 class="form-signin-heading">Please sign in</h2>
      <label class="sr-only" for="username">Username or Email</label>
      <input class="form-control" type="text" name="identifier" placeholder="Username or Email">
      <label class="sr-only" for="password">Password</label>
      <input class="form-control" type="password" name="password" placeholder="Password">
      <button class="btn btn-primary" type="submit">Sign in</button>

      <% if (providers) { %>
        <hr />
        <% _.each(providers, function (provider) { %>
          <a href="/auth/<%= provider.slug %>" class="btn btn-default" role="button"><%= provider.name %></a>
        <% }) %>
      <% } %>
    </form>

  </div>
</div>
<div class="signin-line"></div>
