<% include ../header.ejs %>

<div id="admin-page">
	<div class="container">
		<h1>New dashboard</h1>
		<hr />
		<% include ../../messages.ejs %>
		<form action="/admin/dashboards/add" method="POST">
			<div class="form-group">
				<label class="form-label">Dashboard name</label>
				<input type="text" name="name" class="form-control" />
				<div class="help-block">Enter the dashboard name</div>
			</div>

			<div class="form-group">
				<label class="form-label">Description</label>
				<input type="text" name="description" class="form-control" />
				<div class="help-block">Enter a short administrative description for this dashboard</div>
			</div>

			<div class="form-group">
				<label class="form-label">Path</label>
				<div class="input-group">
					<div class="input-group-addon">/d/</div>
					<input type="text" name="path" class="form-control" />
				</div>
				<div class="help-block">Enter the dashboard path</div>
			</div>

			<div class="form-group">
				<label class="form-label">Access control</label>
				<select name="public" class="form-control">
					<option value="false">Private</option>
					<option value="true">Public</option>
				</select>
				<div class="help-block">If a dashboard is private only registered users can access it</div>
			</div>

			<div class="form-group">
				<button class="btn btn-success" type="submit">Save</button>
			</div>
		</form>
	</div>
</div>